{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://singular-blockly.github.io/schemas/translation-file.schema.json",
    "title": "Translation Messages File",
    "description": "Schema for media/locales/{lang}/messages.js structure validation",
    "type": "object",
    "required": [
        "MESSAGES"
    ],
    "properties": {
        "MESSAGES": {
            "type": "object",
            "description": "Map of message keys to translated strings",
            "patternProperties": {
                "^[A-Z][A-Z0-9_]*$": {
                    "type": "string",
                    "minLength": 1,
                    "description": "Translated message string (non-empty)"
                }
            },
            "additionalProperties": false
        }
    },
    "examples": [
        {
            "MESSAGES": {
                "CATEGORY_LOGIC": "制御",
                "CATEGORY_LOOPS": "繰り返し",
                "ARDUINO_DIGITAL_WRITE": "デジタルピンに出力",
                "SERVO_SETUP": "サーボモーターを設定"
            }
        }
    ],
    "definitions": {
        "CommonMessageKeys": {
            "description": "Common message keys that should exist in all language files",
            "type": "object",
            "properties": {
                "CATEGORY_LOGIC": {
                    "type": "string"
                },
                "CATEGORY_LOOPS": {
                    "type": "string"
                },
                "CATEGORY_MATH": {
                    "type": "string"
                },
                "CATEGORY_TEXT": {
                    "type": "string"
                },
                "CATEGORY_LISTS": {
                    "type": "string"
                },
                "CATEGORY_MOTORS": {
                    "type": "string"
                },
                "CATEGORY_SENSORS": {
                    "type": "string"
                },
                "CATEGORY_VISION_SENSORS": {
                    "type": "string"
                },
                "ARDUINO_DIGITAL_WRITE": {
                    "type": "string"
                },
                "ARDUINO_DIGITAL_READ": {
                    "type": "string"
                },
                "ARDUINO_ANALOG_WRITE": {
                    "type": "string"
                },
                "ARDUINO_ANALOG_READ": {
                    "type": "string"
                },
                "SERVO_SETUP": {
                    "type": "string"
                },
                "SERVO_WRITE": {
                    "type": "string"
                }
            }
        }
    },
    "additionalProperties": false
}